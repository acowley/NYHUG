name:                CopilotDemo
version:             0.1.0.0
synopsis:            Demo for the New York Haskell Group
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Anthony Cowley
maintainer:          acowley@gmail.com
copyright:           Copyright (c) 2013 Anthony Cowley
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable CopilotDemo
  main-is:             Main.hs
  other-modules:       Logger, Monitor
  build-depends:       base >=4.6 && <4.7, transformers >=0.3 && <0.4, 
                       machines >=0.2 && <0.3, void >=0.6 && <0.7, 
                       bytestring >=0.10 && <0.11, filemanip >=0.3 && <0.4,
                       serialport >= 0.4.6.1, copilot, copilot-sbv, sbv, ekg
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -threaded "-with-rtsopts=-T -N"